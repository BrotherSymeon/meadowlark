<h4>Request Group Rate</h4>

<form>
  <input type="hidden" id="referrer" name="referrer">
  <div class="form-group row">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control form-control" id="name" name="name" placeholder="Your Name">
    </div>
  </div>
  <div class="form-group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label">Group Size</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="groupSize" name="groupSize" >
    </div>
  </div>
  <div class="form-group row">
    <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label">Email</label>
    <div class="col-sm-10">
      <input type="email" class="form-control form-control" id="email" name="email" placeholder="Your Email">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Make Request</button>
    </div>
  </div>
</form>
<script>
$(document).ready(function(){
$('input[name="referrer"]').val(document.referrer);
});
</script>